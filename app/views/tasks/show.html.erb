<h1><%= @task.title %> </h1>
<p> <%=  @task.details %> </p>
<% if @task.completed  %>
<p> [x] This task is already completed. </p>
<% else %>
<p> [ ] This task is not completed yet. </p>
<% end %>

<%= link_to "edit", edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>



<%=link_to "Back to list", tasks_path%>
